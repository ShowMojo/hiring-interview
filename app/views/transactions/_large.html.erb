<h1>Create 100-1000 USD Transaction</h1>
<ul class="links-list">
  <li><%= link_to "Create 0-100 USD Transaction", new_transaction_path(type: 'small') %></li>
  <li><%= link_to "Create >1000 USD Transaction", new_transaction_path(type: 'extra') %></li>
</ul>

<%= form_with model: @transaction do |form| %>
  <%= form.hidden_field :from_currency, value: 'USD' %>
  <%= hidden_field_tag :type, 'large' %>
  <%= render partial: "transaction", locals: { transaction: @transaction, form: form } %>
  <div>
    <%= form.submit %>
  </div>
<% end %>

