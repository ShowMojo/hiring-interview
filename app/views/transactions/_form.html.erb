<%= form_with model: @transaction do |form| %>
  <%= hidden_field_tag :type, transaction_type %>

  <% if %w[large extra].include?(transaction_type) %>
    <div class="form-group">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, autocomplete: 'off' %>
      <%= render "shared/error_messages", resource: @transaction, full_messages_for: :first_name %>
    </div>

    <div class="form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, autocomplete: 'off' %>
      <%= render "shared/error_messages", resource: @transaction, full_messages_for: :last_name %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :from_amount, 'Amount' %>
    <%= form.text_field :from_amount, autocomplete: 'off' %>
    <%= render "shared/error_messages", resource: @transaction, full_messages_for: :from_amount %>
  </div>

  <div class="form-group">
    <%= form.label :from_currency %>
    <%= form.select :from_currency, Transaction::AVAILABLE_CURRENCIES %>
    <%= render "shared/error_messages", resource: @transaction, full_messages_for: :from_currency %>
  </div>

  <div class="form-group">
    <%= form.label :to_currency %><br>
    <%= form.select :to_currency, Transaction::AVAILABLE_CURRENCIES %>
    <%= render "shared/error_messages", resource: @transaction, full_messages_for: :to_currency %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
