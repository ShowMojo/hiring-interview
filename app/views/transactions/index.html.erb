<div><h1>Transactions</h1></div>
<div>
  <table>
    <thead>
      <tr>
        <th>Code</th>
        <th>Transaction</th>
        <th>Client</th>
        <th>Manager</th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <td>
            <%= transaction.uid %>
          </td>
          <td>
            <%= format_money(transaction.from_amount, transaction.from_currency) %>
            ->
            <%= format_money(transaction.to_amount, transaction.to_currency) %>
          </td>
          <td>
            <%= full_name(transaction) %>
          </td>
          <td>
            <%= full_name(transaction.manager) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @transactions %>

  <ul class="links-list">
    <li><%= link_to "Create 0-100 USD Transaction", new_transaction_path(type: 'small') %></li>
    <li><%= link_to "Create 100-1000 USD Transaction", new_transaction_path(type: 'large') %></li>
    <li><%= link_to "Create >1000 USD Transaction", new_transaction_path(type: 'extra') %></li>
  </ul>
</div>