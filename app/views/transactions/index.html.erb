<div><h1>Transactions</h1></div>
<div>
  <table>
    <thead>
      <tr>
        <th>Code</th>
        <th>Transaction</th>
        <th>Client</th>
        <th>Manager</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "transaction", collection: @transactions, as: :transaction, cached: true %>
    </tbody>
  </table>

  <ul class="links-list">
    <li><%= link_to "Create 0-100 USD Transaction", new_transaction_path(type: 'small') %></li>
    <li><%= link_to "Create 100-1000 USD Transaction", new_transaction_path(type: 'large') %></li>
    <li><%= link_to "Create >1000 USD Transaction", new_transaction_path(type: 'extra') %></li>
    <%== pagy_nav(@pagy) %>
  </ul>
</div>
