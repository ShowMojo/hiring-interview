<div><h1>Transactions</h1></div>
<div>
  <table>
    <thead>
      <tr>
        <th>Code</th>
        <th>Transaction</th>
        <th>Client</th>
        <th>Manager</th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <td>
            <%= transaction.uid %>
          </td>
          <td>
            <%= number_to_currency(transaction.from_amount, unit: transaction.from_currency,
                                  separator: ",", delimiter: " ", format: "%n %u") %>
            ->
            <%= number_to_currency(transaction.to_amount, unit: transaction.to_currency,
                                  separator: ",", delimiter: " ", format: "%n %u") %>
          </td>
          <td>
            <%= transaction.client_full_name %>
          </td>
          <td>
            <%= transaction.manager&.full_name %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <ul class="links-list">
    <li><%= link_to "Create Transaction", new_transaction_path %></li>
  </ul>
</div>
